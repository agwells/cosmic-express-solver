{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "isolatedModules": true,
    "outDir": "built"
  },
  "include": ["src"]
}
